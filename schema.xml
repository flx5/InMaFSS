<database name="inmafss" defaultIdMethod="native">
    <table name="events" phpName="Event" namespace="InMaFSS\Data">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="title" type="varchar" size="255" required="true" />
        <column name="content" type="longvarchar" size="255" required="true" />
        <column name="begin" type="date" required="true"/>
        <column name="end" type="date" required="true"/>
    </table>
    <table name="allowed_ips" phpName="IPRange" namespace="InMaFSS\Data">
        <column name="range" type="varchar" size="49" required="true" primaryKey="true"/>
    </table>
    <table name="mensa" phpName="Mensa" namespace="InMaFSS\Data">
        <column name="day" type="date" required="true" primaryKey="true" />
        <column name="menu1" type="varchar" size="255" required="true" />
        <column name="menu2" type="varchar" size="255" required="true" />
        <column name="salad" type="varchar" size="255" required="true" />
    </table>
    <table name="pages" phpName="Page" namespace="InMaFSS\Data">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="title" type="varchar" size="100" required="true" />
        <column name="content" type="longvarchar" size="255" required="true" />
        <column name="begin" type="date" required="true"/>
        <column name="end" type="date" required="true"/>
        <column name="show_pupil" type="boolean" required="true"/>
        <column name="show_teacher" type="boolean" required="true"/>
    </table>
    <table name="replacements" phpName="Replacement" namespace="InMaFSS\Data">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="grade" type="varchar" size="5" required="true" />
        <column name="lesson" type="integer" size="2" required="true" />
        <column name="teacher" type="varchar" size="50" required="true" />
        <column name="replacement" type="varchar" size="50" required="false" />
        <column name="room" type="varchar" size="5" required="false" />
        <column name="comment" type="varchar" size="100" required="false" />
        <column name="day" type="date" required="true"/>
    </table>
</database>